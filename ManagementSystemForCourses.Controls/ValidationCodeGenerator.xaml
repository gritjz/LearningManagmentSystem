<UserControl x:Class="ManagementSystemForCourses.Controls.ValidationCodeGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementSystemForCourses.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="grdRoot" >
        <StackPanel>
            <!--{Binding ImageSource,RelativeSource={RelativeSource AncestorType={x:Type local:ValidationCodeGenerator}}}-->
            <Image Source="{Binding ImageSource,RelativeSource={RelativeSource AncestorType={x:Type local:ValidationCodeGenerator}}}"
               MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
            <!--<TextBlock Background="Blue" Text="{Binding ValidationCode,RelativeSource={RelativeSource AncestorType={x:Type local:ValidationCodeGenerator}}}"/>-->
        </StackPanel>
       
    </Grid>
</UserControl>
